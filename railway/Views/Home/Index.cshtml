<script type="text/javascript">
    function yzm_url() {
        return "/api/v1/portal/validcode?" + Math.random().toString().substr(2, 7);
    }    
    var yzm = document.getElementById("yzm");
    yzm.src = yzm_url();
    yzm.onclick = function () {
        this.src = yzm_url();
    };
    document.getElementById("submit").onclick = function () {
        var username = $("#username").val().trim();
        var password = $("#password").val();
        var valicode = $("#valicode").val().trim();
        if (username.length == 0 || password.length == 0 || valicode.length == 0) {
            alert("请输入登录信息");
            return;
        }            
        $.post("/api/v1/portal/logon", { username: username, password: password, valicode: valicode }, function (d) {
            if (d.code != 0)
                alert(d.message);
            else
                alert("登录成功");
        });
    };
</script>